# Application
NODE_ENV=production
APP_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# Database
POSTGRES_USER=wagateway
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123
POSTGRES_DB=wagateway
DATABASE_URL=postgresql://wagateway:CHANGE_THIS_STRONG_PASSWORD_123@postgres:5432/wagateway

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_456@redis:6379

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MIN_32_CHARACTERS_789
REFRESH_TOKEN_SECRET=CHANGE_THIS_REFRESH_SECRET_MIN_32_CHARACTERS_012

# Evolution API
EVOLUTION_SERVER_URL=https://evolution.yourdomain.com
EVOLUTION_GLOBAL_API_KEY=CHANGE_THIS_EVOLUTION_API_KEY_345

# Payment Gateway - Midtrans
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# Payment Gateway - Xendit (Optional)
XENDIT_SECRET_KEY=your-xendit-secret-key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password
SMTP_FROM=WA Gateway <noreply@yourdomain.com>

# MinIO (Object Storage)
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_678
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=CHANGE_THIS_MINIO_SECRET_901

# InfluxDB (Time-series Database)
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=CHANGE_THIS_INFLUXDB_PASSWORD_234
INFLUXDB_ORG=wagateway
INFLUXDB_TOKEN=CHANGE_THIS_INFLUXDB_TOKEN_567
INFLUXDB_BUCKET=pon_monitoring
INFLUXDB_URL=http://influxdb:8086

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_890

# Domain (for SSL certificates)
DOMAIN=yourdomain.com
EMAIL=admin@yourdomain.com

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Sentry (Error Tracking - Optional)
SENTRY_DSN=

# Application Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
TRIAL_PERIOD_DAYS=7
MAX_INSTANCES_FREE=1
MAX_MESSAGES_FREE=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=7d
